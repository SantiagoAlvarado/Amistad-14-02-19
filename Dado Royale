var azar

function setup() {
  createCanvas(500, 500);
   azar = int (random (1,7));
}

function draw() {
  background(0);
  if (mouseIsPressed){
    azar = int (random (1,7));
  }
  if(azar == 1){
  uno();
  }
if(azar == 2){
  dos();
  }
  if(azar == 3){
  tres();
  }
  if(azar == 4){
  cuatro();
  }
  if(azar == 5){
  cinco();
  }
  if(azar == 6){
  seis();
  }
  function uno() {
    fill(210, 0, 0);
    ellipse(250, 250, 100, 100);
  }

  function dos() {
    fill(210, 0, 0);
    ellipse(150, 150, 100, 100);
    ellipse(350, 350, 100, 100);
  }

  function tres() {
    fill(210, 0, 0);
    ellipse(150, 150, 100, 100);
    ellipse(350, 350, 100, 100);
    ellipse(250, 250, 100, 100);
  }

  function cuatro() {
    fill(210, 0, 0);
    ellipse(100, 100, 100, 100);
    ellipse(100, 400, 100, 100);
    ellipse(400, 100, 100, 100);
    ellipse(400, 400, 100, 100);
  }

  function cinco() {
    fill(210, 0,0);
    ellipse(100, 100, 100, 100);
    ellipse(100, 400, 100, 100);
    ellipse(400, 100, 100, 100);
    ellipse(400, 400, 100, 100);
    ellipse(250, 250, 100, 100);
  }

  function seis() {
    fill(210, 0, 0);
    ellipse(100, 100, 100, 100);
    ellipse(100, 400, 100, 100);
    ellipse(400, 100, 100, 100);
    ellipse(400, 400, 100, 100);
    ellipse(400, 250, 100, 100);
    ellipse(100, 250, 100, 100);
  }
}
